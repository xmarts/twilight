<?xml version="1.0"?>
<odoo>
    <data>
    	<record model="ir.ui.view" id="crm_claims_ept_tree_view">
            <field name="name">CRM - Claims Ept Tree</field>
            <field name="model">crm.claim.ept</field>
            <field name="arch" type="xml">
                <tree string="Claims">
                	<field name="code"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="date"/>
                    <field name="state"/>
                    <field name="date_action_next"/>
                    <field name="action_next"/>
                    <field name="date_deadline" invisible="1"/>
                    <field name="date_closed" invisible="1"/>
                </tree>
            </field>
        </record>
		
		<record model="ir.ui.view" id="reject_reason_ept_form_view">
            <field name="name">Reject Reason</field>
            <field name="model">claim.reject.message</field>
            <field name="arch" type="xml">
                <form>
                	<field name="name" required="1"/>
                </form>
            </field>
        </record>
		
		<record model="ir.ui.view" id="crm_claims_ept_form_view">
            <field name="name">CRM - Claims Ept Form</field>
            <field name="model">crm.claim.ept</field>
            <field name="arch" type="xml">
                <form string="Claim">
                <header>
                	<button type="object" name="action_rma_send" string="Send RMA By Mail" attrs="{'invisible':[('rma_send','=',True)]}" class="oe_highlight"/>
                	<button type="object" name="action_rma_send" string="Send RMA By Mail" attrs="{'invisible':[('rma_send','=',False)]}"/>
        			<button type="object" name="approve_claim" states="draft" string="Approve" class="oe_highlight"/>
        			<button type="object" name="reject_claim" states="draft" string="Reject" class="oe_highlight"/>
					<button type="object" name="set_to_draft" attrs="{'invisible':[('state','not in',['approve','reject'])]}" string="Set to Draft" class="oe_highlight"/>
					<button type="object" name="process_claim" string="Validate" class="oe_highlight" attrs="{'invisible':[('state','!=','process')]}"/>
					<button type="object" name="action_claim_reject_process_ept" string="Reject" class="oe_highlight" attrs="{'invisible':[('state','!=','process')]}"/>
					<field name="state" widget="statusbar" statusbar_visible="draft,approve,process,close"/>
                </header>
                <sheet string="Claims">
                	<div class="oe_button_box" name="button_box">
						<button class="oe_stat_button" name="show_return_picking" type="object"
							attrs="{'invisible':[('state', 'in', ['draft','reject'])]}" icon="fa-truck">
							<span class="o_stat_text">Receipt</span>
						</button>
						<button class="oe_stat_button" name="show_delivery_picking" type="object"
							attrs="{'invisible':[('to_return_picking_ids','=',[])]}" icon="fa-truck">
							<span class="o_stat_text">Deliveries</span>
						</button>
						<button class="oe_stat_button" name="act_supplier_invoice_refund_ept" type="object"
							attrs="{'invisible':[('refund_invoice_ids', '=', [])]}" icon="fa-money">
							<span class="o_stat_text">Refund Invoices</span>
						</button>
						<button class="oe_stat_button" name="act_new_so_ept" type="object"
							attrs="{'invisible':[('new_sale_id', '=', False)]}" context="{'so_id': new_sale_id}" icon="fa-usd">
							<span class="o_stat_text">Sale Order</span>
						</button>
					</div>
                	<h1>
                		<field name="new_sale_id" invisible="1"></field>
                		<field name="refund_invoice_ids" invisible="1"></field>
                		<field name="to_return_picking_ids" invisible="1"></field>
                		<field name="rma_send" invisible="1"/>
                        <field name="code" class="oe_inline" readonly="1"/>
                    </h1>
                    <group colspan="4" col="4" groups="base.group_user">
                    	<field name="name" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="user_id" attrs="{'readonly':[('state','!=','draft')]}" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'base.group_sale_salesman_all_leads']}"/>
                        <field name="priority" attrs="{'readonly':[('state','!=','draft')]}" widget="priority"/>
                        <field name="section_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="date_deadline" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </group>
                    <group>
                    	<field name="reject_message_id" readonly="1" attrs="{'invisible':[('state','!=','reject')]}" options='{"no_open": True}'/>
                    </group>
                    <group colspan="4" col="4">
                    	<notebook>
                            <page string="RMA Details">
                                <group colspan="4" col="4" groups="base.group_user">
                                    <field name="picking_id" context="{'rma_model':True}" attrs="{'readonly':[('state','!=','draft')]}" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_quick_open': True}"></field>
                                    <field name="sale_id" readonly="1"/>
                                    <field name="partner_id" string="Partner" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_quick_open': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="partner_phone" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="email_from" widget="email" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    <field name="location_id" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_quick_open': True}"></field>
                                </group>
                                <group invisible="1">
	                                <field name="move_product_ids" invisible="1"></field>
	                                <field name="return_picking_id" invisible="1"></field>
                                </group>
                                <group>
	                                <separator colspan="2" string="RMA Lines"></separator>
	                                <field name="claim_line_ids" nolabel="1" mode="tree">
										<tree editable="bottom" create="0" edit="true">
											<field name="product_id" attrs="{'readonly':[('parent.state','not in',['draft'])],'required':[('parent.state','in',['draft'])]}" options="{'no_quick_create':True,'no_create_edit':True}" domain="[('id','in',parent.move_product_ids)]"></field>
											<field name="done_qty" attrs="{'readonly':[('parent.state','!=',False)]}"></field>
											<field name="quantity" attrs="{'readonly':[('parent.state','!=','draft')],'required':[('parent.state','=','draft')]}"></field>
											<field name="rma_reason_id" attrs="{'readonly':[('parent.state','not in',['draft'])],'required':[('parent.state','in',['draft'])]}"></field>
											<field name="return_qty" readonly="1" ></field>
											<field name="claim_type" string="Action" attrs="{'readonly':[('parent.state','!=','process')],'required':[('parent.state','=','process')]}"/>
											<button name="action_claim_refund_process_ept" attrs="{'invisible':['|',('parent.state','not in',['process','close']),('claim_type','!=','replace')]}" icon="fa fa-cogs" string="Set product to be replace" type="object"/>
											<field name="move_id" invisible="1"/>
										</tree>
										<form>
											<group>
												<field name="product_id"/>
												<field name="claim_type" string="Action"/>
											</group>
											<group>
												<field name="done_qty"/>
												<field name="quantity"/>
											</group>
										</form>
									</field>
								</group>
                                <!-- <group colspan="2" col="2" groups="base.group_user">
                                    <separator colspan="2" string="Responsibilities"/>
                                    <field name="user_fault"/>
                                    <field name="categ_id" options="{'no_create': True, 'no_open': True}"/>
                                </group> -->
                                <separator colspan="4" string="RMA Note" groups="base.group_user"/>
                                <field name="description" colspan="4" nolabel="1"/>
                            </page>
                            <page string="Follow Up" name="followup" groups="base.group_user">
                                <group colspan="2" col="2">
                                    <separator colspan="2" string="Actions"/>
                                    <field name="date_action_next"/>
                                    <field name="action_next"/>
                                </group>
                                <group colspan="2" col="2" groups="base.group_no_one">
                                    <separator colspan="2" string="Dates"/>
                                    <field name="create_date"/>
                                    <field name="date_closed" invisible="1"/>
                                    <field name="write_date"/>
                                </group>
                                <group colspan="2" col="2">
                                    <separator colspan="2" string="Root Causes"/>
                                    <field name="cause" colspan="2" nolabel="1"/>
                                </group>
                                <group colspan="2" col="2">
                                    <separator colspan="2" string="Resolution Actions"/>
                                    <field name="type_action"/>
                                    <field name="resolution" colspan="2" nolabel="1" placeholder="Action Description..."/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>
	        
	    <record model="ir.ui.view" id="crm_claims_ept_calendar_view">
            <field name="name">Claims Actions</field>
            <field name="model">crm.claim.ept</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <calendar string="Claims" date_start="date_action_next" color="user_id">
                    <field name="name"/>
                </calendar>
            </field>
        </record>
        
        <record id="view_crm_case_claims_filter" model="ir.ui.view">
            <field name="name">CRM - Claims Search</field>
            <field name="model">crm.claim.ept</field>
            <field name="arch" type="xml">
                <search string="Search Claims">
                    <field name="name" string="Claims"/>
                    <separator/>
                    <filter string="Unassigned Claims" icon="terp-personal-" domain="[('user_id','=', False)]" help="Unassigned Claims" />
                    <field name="partner_id" filter_domain="[('partner_id','child_of',self)]"/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Partner" icon="terp-partner" domain="[]" help="Partner" context="{'group_by':'partner_id'}"/>
                        <filter string="Responsible" icon="terp-personal" domain="[]" help="Responsible User" context="{'group_by':'user_id'}"/>
                        <filter string="State" icon="terp-stage" domain="[]" context="{'group_by':'state'}"/>                        
                        <filter string="Claim Month" icon="terp-go-month" domain="[]" help="Claim Date by Month" context="{'group_by':'date'}"/>
                        <filter string="Deadline" icon="terp-go-month" domain="[]" context="{'group_by':'date_deadline'}"/>
                        <filter string="Closure" icon="terp-go-month" domain="[]" help="Date Closed" context="{'group_by':'date_closed'}"  groups="base.group_no_one" invisible="1"/>
                    </group>
                </search>
            </field>
        </record>
		
		<record model="ir.actions.act_window" id="crm_claim_ept_action">
            <field name="name">RMA</field>
            <field name="res_model">crm.claim.ept</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,calendar,form</field>
            <field name="view_id" ref="crm_claims_ept_tree_view"/>
            <field name="context">{"search_default_user_id":uid, "stage_type":'claim'}</field>  
            <!-- <field name="search_view_id" ref="crm_claim_ept.view_crm_case_claims_filter"/> --> 
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Record and track your customers' RMA. RMA may be linked to a sales order or a lot.You can send emails with attachments and keep the full history for a RMA (emails sent, intervention type and so on). RMA may automatically be linked to an email address using the mail gateway module.
                </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="crm_claim_ept_tree_action">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="crm_claims_ept_tree_view"/>
            <field name="act_window_id" ref="crm_claim_ept_action"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="crm_claim_ept_calendar_action">
            <field name="sequence" eval="2"/>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="crm_claims_ept_calendar_view"/>
            <field name="act_window_id" ref="crm_claim_ept_action"/>
        </record>   
        
        
        <record model="ir.actions.act_window.view" id="crm_claim_ept_form_action">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="crm_claims_ept_form_view"/>
            <field name="act_window_id" ref="crm_claim_ept_action"/>
        </record>
        
        <menuitem name="After-Sale Services" id="menu_crm_claim_ept_after_sale"  groups="rma_ept.group_rma_user_ept"
			parent="sale.sale_menu_root" sequence="3"/>			
		
		<menuitem name="RMA" id="menu_crm_claim_ept" 
			action="crm_claim_ept_action" parent="menu_crm_claim_ept_after_sale"  sequence="1"/>
			
    </data>
</odoo>
